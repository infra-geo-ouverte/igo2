/* Reset */

html,
body,
div {
  border: 0;
  margin: 0;
  padding: 0;
}

html, body {
  width: 100%;
  height: 100%;
}

* {
  box-sizing: border-box;
}

@import '~@angular/material/core/theming/prebuilt/deeppurple-amber.css';

input {
  height: 40px;
}

.md-input-placeholder {
  font-style: italic;
  top: 10px !important;
}
