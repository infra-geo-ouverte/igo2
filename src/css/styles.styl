/* Reset */

html,
body,
div {
  border: 0;
  margin: 0;
  padding: 0;
}

html, body {
  width: 100%;
  height: 100%;
}

* {
  box-sizing: border-box;
}

@import '~@angular/material/core/theming/prebuilt/deeppurple-amber.css';

@require './theme.styl';

input {
  height: $igo-icon-button-height;
}

.md-input-element {
  padding: 0 $igo-padding !important;
}

.md-input-placeholder {
  left: $igo-padding !important;
  right: $igo-padding !important;
}

button[md-icon-button] {
  border-radius: 0;
  width: $igo-icon-button-width;
  min-width: $igo-icon-button-width;
  margin: 0;
  padding: 0;
  background-color: $igo-tertiary-color;
}

button {
  background-color: $igo-tertiary-color;
}

table td {
  padding: $igo-padding;
}

table.igo-striped tbody tr:nth-child(odd) {
  background-color: $igo-secondary-color-hover;
}

.md-input-placeholder {
  font-style: italic;
  top: 10px !important;
}

.igo-container {
  width: "calc(100% - 2 * %s)" % $igo-padding;
  height: 100%;
  padding: $igo-padding 0;
  margin: 0 $igo-padding;
  overflow: hidden;
  position: relative;
}

.igo-content {
  height: 100%;
  width: 100%;
  overflow: auto;
}
