media_queries = {
  mobile  : "only screen and (max-width: 500px)",
  tablet  : "only screen and (min-width: 501px) and (max-width: 800px)",
  desktop : "only screen and (min-width: 801px)"
}

media(breakpoints)
  $conditions = ()
  for breakpoint in breakpoints
    push($conditions, media_queries[breakpoint])
  $conditions = join(", ", $conditions)
  @media $conditions
    {block}
