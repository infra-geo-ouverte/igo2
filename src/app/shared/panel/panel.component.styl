@require '../../../css/theme.styl';

$igo-panel-header-height = 40px;

.igo-panel-header {
  background-color: $igo-primary-color;
  color: $igo-secondary-font-color;
  height: $igo-panel-header-height;
  padding: 8px;
  text-align: center;
}

.igo-panel-header h3 {
  margin-top: 0px;
  margin-bottom: 0px;
}

.igo-panel-header >>> [panellefticon] {
  float: left;
}

.igo-panel-header >>> [panelrighticon] {
  float: right;
}

.igo-panel-header >>> [panellefticon]:hover,
.igo-panel-header >>> [panelrighticon]:hover {
  cursor: pointer;
}

.igo-panel-content {
  height: "calc(100% - %s)" % $igo-panel-header-height;
  overflow: auto;
}

.igo-panel-title {
  display: inline-block;
  max-width: calc(100% - 60px);
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
