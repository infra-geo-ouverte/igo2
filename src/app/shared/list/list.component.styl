@require '../../../css/theme.styl';

$igo-list-item-height = 46px;
$igo-list-item-padding = 3px;
$igo-list-item-icon-padding = 8px;

// This is to make the list scrollable
:host {
  display: block;
  height: 100%;
  overflow: auto;
  position: relative;
}

md-list {
  padding-top: 0;
}

// We need to make sure the firs ancestor with a
// position other than static is the host itself
// to properly scroll to the focused list item 
:host >>> .igo-container {
  position: static;
}

:host >>> .mat-list .mat-list-item.mat-list-item-avatar .mat-list-item-content {
  height: $igo-list-item-height;
  padding: $igo-list-item-padding;
}

:host >>> .mat-list .mat-list-item.mat-list-item-avatar .mat-list-item-content>md-icon {
  padding: $igo-list-item-icon-padding;
}

:host >>> [igolistitem] md-list-item [md-list-avatar] {
  height: auto;
  width: auto;
}

:host md-list.selectable >>> [igolistitem] md-list-item:hover, {
  background-color: $igo-secondary-color-hover;
  cursor: pointer;
}

:host md-list.selectable >>> [igolistitem].igo-selected md-list-item {
  background-color: $igo-secondary-color;
}

:host >>> [igolistitem]:focus {
  outline: none;
}
