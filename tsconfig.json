{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "esModuleInterop": true,
    "lib": ["ES2022", "dom"],
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@igo2/*": ["node_modules/@igo2/*", "../../packages/*/src/public_api"]
    }
  },
  "exclude": ["dist", "scripts", "e2e/**/*"]
}
